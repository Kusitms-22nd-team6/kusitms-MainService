<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@color/white"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit" />

        <Button
            android:id="@+id/picBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="insert image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 :  "
            android:textSize="20dp" />
        <!--
        <TextView
            android:id="@+id/activity_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="myidissubin"
            android:textSize="20dp" />
-->
    </LinearLayout>

    <EditText
        android:id="@+id/activity_participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="컨셉을 입력하세요 " />

    <EditText
        android:id="@+id/activity_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="분야를 입력하세요 " />

    <EditText
        android:id="@+id/activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="유형을 입력하세요 " />

    <EditText
        android:id="@+id/activity_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목을 입력하세요 " />

    <EditText
        android:id="@+id/activity_maxPeopleNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="최대인원을 입력하세요 " />

    <EditText
        android:id="@+id/activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력하세요 " />

    <ImageView
        android:id="@+id/picView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_none" />


</LinearLayout>